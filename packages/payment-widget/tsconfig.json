{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "$src/*": ["src/*"],
      "$utils/*": ["src/lib/utils/*"],
    },
  },
  "include": ["src/**/*", "src/*.d.ts"],
}
