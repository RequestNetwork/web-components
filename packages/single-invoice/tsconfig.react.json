{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/react",
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["ES2017", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strict": false
  },
  "include": ["src/lib/react/**/*"]
}
